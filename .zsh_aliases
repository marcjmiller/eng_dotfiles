# set dotfiles as alias to manage bare repo at $HOME/.dotfiles
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
# set alias to add all updated files currently tracked in dotfiles repo
alias dau='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME add -u'
alias da='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME add'

# zsh aliases
alias zcfg='nano $HOME/.zshrc'
alias zali='nano $HOME/.zsh_aliases'
alias zexp='nano $HOME/.zsh_exports'
alias reload='source $HOME/.zshrc'

# git alias for git-together
alias git=git-together
